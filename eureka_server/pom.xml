    <properties>
        <docker.image.prefix>image</docker.image.prefix> <!--镜像前缀，随便取-->
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>dockerfile-maven-plugin</artifactId>
                <version>1.3.7</version>
                <!--放开这块注释，则运行mvn deploy命令就会打包镜像-->
